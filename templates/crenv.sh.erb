# Generated by Chef for <%= node['fqdn'] %>
# Local modifications will be overridden

# prefer a user crenv over a system wide install
if [ -s "${HOME}/.crenv/bin" ]; then
  crenv_root="${HOME}/.crenv"
elif [ -s "<%= node['crenv']['root_path'] %>" ]; then
  rbenv_root="<%= node['crenv']['root_path'] %>"
  export CRENV_ROOT="$crenv_root"
fi

if [ -n "$crenv_root" ]; then
  export PATH="${crenv_root}/bin:$PATH"
  eval "$(crenv init -)"
fi
